<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#FFFFFF" />
             <gradient  android:angle="-90"  android:startColor="#6b000a" android:endColor="#b9372d"  />            
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#b7b9ac" />
             <solid  android:color="#6b000a"/>       
         </shape>
     </item>  
    <item >
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#FFFFFF" />
             <gradient  android:angle="-90"  android:startColor="#ca746d" android:endColor="#6b000a" />            
         </shape>
     </item>
</selector>